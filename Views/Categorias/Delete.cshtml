@model ExemploEF.Models.Categoria

@{
    ViewData["Title"] = "Delete";
}


<h1 class="text-center mb-4" style="font-size: 2.5rem; font-weight: bold; color: #000000; background-color: red; padding: 20px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    Excluir Categoria
</h1>

<div class="container">
    <h3 class="text-center mb-4">Tem certeza de que deseja excluir essa categoria?</h3>

    <div>
        <h4>Categoria</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
        </dl>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoriaId" />

        <input type="submit" value="Deletar" class="btn btn-danger btn-lg rounded-3 w-100 mb-2 text-dark" />
    </form>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-primary btn-lg rounded-3 w-100">Voltar à lista de Categorias</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

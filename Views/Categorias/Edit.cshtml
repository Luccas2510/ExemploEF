@model ExemploEF.Models.Categoria

@{
    ViewData["Title"] = "Editar Categoria";
}

<h1 class="text-center mb-4" style="font-size: 2.5rem; font-weight: bold; color: #000000; background-color: #00BFFF; padding: 20px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <i class="fas fa-edit"></i> Editar Categoria
</h1>

<div class="container">
    <h4>Categoria</h4>
    <hr />

    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="CategoriaId" />

                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" placeholder="Digite o nome da categoria" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <input type="submit" value="Salvar" class="btn btn-success btn-lg rounded-3 w-100" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-primary btn-lg w-100">Voltar à lista de Categorias</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
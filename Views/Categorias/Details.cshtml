@model ExemploEF.Models.Categoria

@{
    ViewData["Title"] = "Detalhes";
}


<h1 class="text-center mb-4" style="font-size: 2.5rem; font-weight: bold; color: #000000; background-color: #808080; padding: 20px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    Detalhes da Categoria
</h1>

<div class="container">
    <h4 class="mt-4">Categoria</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>

    <div class="form-group mt-3">
        <a asp-action="Edit" asp-route-id="@Model?.CategoriaId" class="btn btn-info btn-lg rounded-3 me-2 w-100">Editar</a>
    </div>
    <div class="mt-4">
        <a asp-action="Index" class="btn btn-primary btn-lg rounded-3 w-100">Voltar à lista de Categorias</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

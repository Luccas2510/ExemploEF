@model ExemploEF.Models.Cliente

@{
    ViewData["Title"] = "Deletar Usuário";
}

<h1 class="text-center mb-4" style="font-size: 2.5rem; font-weight: bold; color: #000000; background-color: red; padding: 20px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <i class="fas fa-trash-alt"></i> Deletar Usuário
</h1>

<div class="container">
    <h3 class="text-center mb-4">Tem certeza de que deseja excluir este usuário?</h3>

    <h4>Cliente</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nascimento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nascimento)
        </dd>
    </dl>
</div>

<div class="text-center mt-4">
    <form asp-action="Delete" class="d-inline">
        <input type="hidden" asp-for="ClienteID" />
        <input type="submit" value="Deletar" class="btn btn-danger btn-lg rounded-3 w-100 mb-3 text-black" />
    </form>

    <a asp-action="Index" class="btn btn-primary btn-lg rounded-3 w-100">
        <i class="fas fa-arrow-left"></i> Voltar à lista de Clientes
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

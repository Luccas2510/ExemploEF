@model ExemploEF.Models.Cliente

@{
    ViewData["Title"] = "Criar Usuário";
}

<h1 class="text-center mb-4" style="font-size: 2.5rem; font-weight: bold; color: #fff; background-color: #28a745; padding: 20px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <i class="fas fa-user-plus"></i> Criar Usuário
</h1>

<div class="container">
    <h4 class="text-center mb-4">Cadastro de Cliente</h4>
    <hr />

    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="Nome" class="control-label">Nome</label>
                    <input asp-for="Nome" class="form-control" placeholder="Digite o nome do cliente" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Nascimento" class="control-label">Data de Nascimento</label>
                    <input asp-for="Nascimento" type="date" class="form-control" />
                    <span asp-validation-for="Nascimento" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <input type="submit" value="Criar" class="btn btn-success btn-lg w-100 rounded-3" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-primary btn-lg rounded-3 w-100">
        <i class="fas fa-arrow-left"></i> Voltar para a lista de Clientes
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model ExemploEF.Models.Cliente

@{
    ViewData["Title"] = "Detalhes do Usuário";
}

<h1 class="text-center mb-4" style="font-size: 2.5rem; font-weight: bold; color: #000000; background-color: darkgrey; padding: 20px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <i class="fas fa-info-circle"></i> Detalhes do Usuário
</h1>

<div class="container">
    <h4 class="mt-4">Cliente</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nascimento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nascimento)
        </dd>
    </dl>
</div>

<div class="text-center mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.ClienteID" class="btn btn-info btn-lg rounded-3 w-100 mb-3">
        <i class="fas fa-edit"></i> Editar
    </a>


    <a asp-action="Index" class="btn btn-primary btn-lg rounded-3 w-100">
        <i class="fas fa-arrow-left"></i> Voltar à lista de Clientes
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
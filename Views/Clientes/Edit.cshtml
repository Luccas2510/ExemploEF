@model ExemploEF.Models.Cliente

@{
    ViewData["Title"] = "Editar Usuário";
}


<h1 class="text-center mb-4" style="font-size: 2.5rem; font-weight: bold; color: #000000; background-color: yellow; padding: 20px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <i class="fas fa-user-edit"></i> Editar Cliente
</h1>

<div class="container">
    <h4 class="mt-4">Cliente</h4>
    <hr />

    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="ClienteID" />

                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" placeholder="Digite o nome do cliente" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Nascimento" class="control-label"></label>
                    <input asp-for="Nascimento" class="form-control" placeholder="Digite a data de nascimento" />
                    <span asp-validation-for="Nascimento" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <input type="submit" value="Salvar" class="btn btn-success btn-lg w-100 rounded-3" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-primary btn-lg w-100 rounded-3">
            <i class="fas fa-arrow-left"></i> Voltar à lista de Clientes
        </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

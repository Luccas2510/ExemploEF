@model IEnumerable<ExemploEF.Models.Produto>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center my-4">Produtos</h1>

<p class="text-end">
    <a asp-action="Create" class="btn btn-success rounded-3 fw-bold">Criar Novo Produto</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Estoque)</th>
            <th>@Html.DisplayNameFor(model => model.Categoria)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Estoque)</td>
                <td>@Html.DisplayFor(modelItem => item.Categoria.Nome)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ProdutoId" class="btn btn-info btn-sm rounded-3">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.ProdutoId" class="btn btn-secondary btn-sm btn rounded-3 text-black">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.ProdutoId" class="btn btn-danger btn-sm rounded-3 text-black">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

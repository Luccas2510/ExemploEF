@model ExemploEF.Models.Produto

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center mb-4" style="font-size: 2.5rem; font-weight: bold; color: #000000; background-color: #00BFFF; padding: 20px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <i class="fas fa-edit"></i> Editar Produto
</h1>

<h4 class="text-center mb-4">Produto</h4>

<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Edit" class="shadow-sm p-4 bg-light rounded">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="ProdutoId" />

            <!-- Nome -->
            <div class="form-group mb-3">
                <label asp-for="Nome" class="form-label">Nome</label>
                <input asp-for="Nome" class="form-control" placeholder="Nome do Produto" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <!-- Estoque -->
            <div class="form-group mb-3">
                <label asp-for="Estoque" class="form-label">Estoque</label>
                <input asp-for="Estoque" class="form-control" placeholder="Quantidade em Estoque" />
                <span asp-validation-for="Estoque" class="text-danger"></span>
            </div>

            <!-- Categoria -->
            <div class="form-group mb-3">
                <label asp-for="CategoriaId" class="form-label">Categoria</label>
                <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId">
                    <option value="">Selecione uma Categoria</option>
                </select>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success btn-lg w-100 rounded-3" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-primary btn-lg w-100 rounded-3">Voltar à lista de Produtos</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
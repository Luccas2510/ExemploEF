@model ExemploEF.Models.Produto

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center mb-4" style="font-size: 2.5rem; font-weight: bold; color: #000000; background-color: red; padding: 20px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    Excluir Produto
</h1>

<div class="container">
    <div class="card shadow-sm">
        <div class="card-header bg-warning text-black">
            <h4 class="mb-0">Tem certeza de que deseja excluir este produto?</h4>
        </div>
        <div class="card-body">
            <h4>Produto</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Nome:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

                <dt class="col-sm-3">Estoque:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Estoque)</dd>

                <dt class="col-sm-3">Categoria:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Categoria.Nome)</dd>
            </dl>

            <!-- Formulário de exclusão -->
            <form asp-action="Delete">
                <input type="hidden" asp-for="ProdutoId" />
                <div class="d-flex justify-content-between">
                    <input type="submit" value="Excluir Produto" class="btn btn-danger btn-lg w-100 rounded-3 text-black" />
                </div>
            </form>
        </div>
    </div>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-primary btn-lg w-100 rounded-3 ml-2">Voltar à lista de Produtos</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

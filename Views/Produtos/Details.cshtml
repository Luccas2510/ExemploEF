@model ExemploEF.Models.Produto

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center mb-4" style="font-size: 2.5rem; font-weight: bold; color: #000000; background-color: #808080; padding: 20px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    Detalhes do Produto
</h1>

<div class="container">
    <div class="card shadow-sm">
        <div class="card-header bg-black text-white">
            <h4 class="mb-0">Produto</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nome:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

                <dt class="col-sm-3">Estoque:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Estoque)</dd>

                <dt class="col-sm-3">Categoria:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Categoria.Nome)</dd>
            </dl>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.ProdutoId" class="btn btn-info btn-lg w-100 rounded-3 mb-2">Editar</a>
        <a asp-action="Index" class="btn btn-primary btn-lg w-100 rounded-3">Voltar à lista de Produtos</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}